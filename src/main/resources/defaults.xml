<?xml version="1.0" encoding="utf-8" ?>
<defaults xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="defaults-schema.xml">
    <repositories>
        <repository id="kxrpc-for-ide" name="kotlinx-rpc for IDE" value="https://maven.pkg.jetbrains.space/public/p/krpc/for-ide" type="URL"/>
        <repository id="maven-central" name="Maven Central" value="https://repo1.maven.org/maven2" type="URL"/>
    </repositories>
    <plugins>
        <plugin name="kotlinx-rpc" versionMatching="EXACT">
            <artifact coordinates="org.jetbrains.kotlinx:kotlinx-rpc-compiler-plugin-cli"/>
            <artifact coordinates="org.jetbrains.kotlinx:kotlinx-rpc-compiler-plugin-k2"/>
            <artifact coordinates="org.jetbrains.kotlinx:kotlinx-rpc-compiler-plugin-backend"/>
            <artifact coordinates="org.jetbrains.kotlinx:kotlinx-rpc-compiler-plugin-common"/>

            <repositoryRef id="kxrpc-for-ide"/>
        </plugin>
    </plugins>
</defaults>
